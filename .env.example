# Supabase (frontend-compatible naming kept for existing setup)
EXPO_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# Optional aliases (server also supports these)
# SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
# SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# Existing database (Drizzle/Postgres)
DATABASE_URL=postgresql://USER:PASSWORD@HOST/DATABASE?sslmode=require

# Session/auth
SESSION_SECRET=change-me

# Optional: restrict Supabase admin login to these emails (comma-separated)
# NORWEDFILM_ADMIN_EMAILS=you@company.com,owner@company.com

# Optional API key auth
# NORWEDFILM_API_KEY=nwf_replace_with_a_strong_key
